<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.livetyping.moydom.ui.activity.ResourcesActivity">
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="78dp">

                <LinearLayout
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="end"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/azul"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/resources_graph_label_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/resources_graph_label_background"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp"
                    android:paddingEnd="@dimen/padding_tiny"
                    android:paddingStart="@dimen/padding_tiny"
                    android:paddingTop="6dp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/label_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.7"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="normal"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/padding_tiny"
                        android:layout_marginStart="@dimen/padding_tiny"
                        android:background="@color/white"/>
                    <TextView
                        android:id="@+id/label_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:text="13.4i"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/header_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/padding_normal">
                    <com.livetyping.moydom.ui.custom.SwipableTextView
                        android:id="@+id/header_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="4sp"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="normal"/>
                    <TextView
                        android:id="@+id/subheader"
                        style="@style/Gray14LeftMd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
            <com.github.mikephil.charting.charts.BarChart

                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="245dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="24dp"
                android:paddingStart="16dp"
                android:paddingTop="28dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:lineSpacingExtra="6sp"
                        android:text="@string/total"
                        android:textSize="16sp"
                        android:textStyle="normal"/>
                    <com.livetyping.moydom.ui.custom.MultisizeTextView
                        android:id="@+id/total_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="@string/rub_measure"
                        android:textColor="@color/black"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        app:firstPartTextSize="32sp"
                        app:secondPartTextSize="20sp"
                        app:withSpace="false"/>

                    <com.livetyping.moydom.ui.custom.MultisizeTextView
                        android:id="@+id/total_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/energy_measure"
                        android:textSize="24sp"
                        android:textStyle="normal"
                        app:firstPartTextSize="24sp"
                        app:secondPartTextSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_larger"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:lineSpacingExtra="6sp"
                        android:text="@string/average"
                        android:textSize="16sp"
                        android:textStyle="normal"/>
                    <com.livetyping.moydom.ui.custom.MultisizeTextView
                        android:id="@+id/average_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="@string/rub_measure"
                        android:textColor="@color/black"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        app:firstPartTextSize="32sp"
                        app:secondPartTextSize="20sp"
                        app:withSpace="false"/>
                    <com.livetyping.moydom.ui.custom.MultisizeTextView
                        android:id="@+id/average_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/energy_measure"
                        android:textSize="24sp"
                        android:textStyle="normal"
                        app:firstPartTextSize="24sp"
                        app:secondPartTextSize="16sp"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_share"/>
                </FrameLayout>
            </LinearLayout>

            <!--separator-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1e000000"/>
            <RelativeLayout
                android:id="@+id/first_zone_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_normal"
                android:visibility="gone">
                <View
                    android:id="@+id/first_zone_color"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/energy_zone_violet_gradient"/>
                <TextView
                    android:id="@+id/first_zone_title"
                    style="@style/Gray16LeftRg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_tiny"
                    android:layout_toEndOf="@id/first_zone_color"/>
                <TextView
                    android:id="@+id/first_zone_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="4sp"
                    android:textColor="#26000000"
                    android:textSize="14sp"
                    android:textStyle="normal"/>
                <LinearLayout
                    android:id="@+id/first_zone_total_container"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/first_zone_title"
                    android:layout_marginStart="@dimen/padding_tiny"
                    android:layout_toEndOf="@+id/first_zone_color"
                    android:orientation="vertical">
                    <TextView
                        style="@style/Gray14LeftMd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total"/>
                    <TextView
                        android:id="@+id/first_zone_total_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/rub_measure"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <com.livetyping.moydom.ui.custom.MultisizeTextView
                        android:id="@+id/first_zone_total_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/energy_measure"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:firstPartTextSize="16sp"
                        app:secondPartTextSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/first_zone_average_container"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/first_zone_title"
                    android:layout_marginStart="@dimen/padding_tiny"
                    android:layout_toEndOf="@+id/first_zone_total_container"
                    android:orientation="vertical">
                    <TextView
                        style="@style/Gray14LeftMd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/average"/>
                    <TextView
                        android:id="@+id/first_zone_average_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/rub_measure"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <com.livetyping.moydom.ui.custom.MultisizeTextView
                        android:id="@+id/first_zone_average_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/energy_measure"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:firstPartTextSize="16sp"
                        app:secondPartTextSize="12sp"/>
                </LinearLayout>

            </RelativeLayout>
            <!-- separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1e000000"/>
            <RelativeLayout
                android:id="@+id/second_zone_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_normal"
                android:visibility="gone">
                <View
                    android:id="@+id/second_zone_color"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/energy_zone_pink_gradient"/>
                <TextView
                    android:id="@+id/second_zone_title"
                    style="@style/Gray16LeftRg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_tiny"
                    android:layout_toEndOf="@id/second_zone_color"/>

                <TextView
                    android:id="@+id/second_zone_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="4sp"
                    android:textSize="14sp"
                    android:textStyle="normal"/>

                <LinearLayout
                    android:id="@+id/second_zone_total_container"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/second_zone_title"
                    android:layout_marginStart="@dimen/padding_tiny"
                    android:layout_toEndOf="@+id/second_zone_color"
                    android:orientation="vertical">
                    <TextView
                        style="@style/Gray14LeftMd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total"/>
                    <TextView
                        android:id="@+id/second_zone_total_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/rub_measure"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <com.livetyping.moydom.ui.custom.MultisizeTextView
                        android:id="@+id/second_zone_total_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/energy_measure"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:firstPartTextSize="16sp"
                        app:secondPartTextSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/second_zone_average_container"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/second_zone_title"
                    android:layout_marginStart="@dimen/padding_tiny"
                    android:layout_toEndOf="@+id/second_zone_total_container"
                    android:orientation="vertical">
                    <TextView
                        style="@style/Gray14LeftMd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/average"/>
                    <TextView
                        android:id="@+id/second_zone_average_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/rub_measure"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <com.livetyping.moydom.ui.custom.MultisizeTextView
                        android:id="@+id/second_zone_average_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/energy_measure"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:firstPartTextSize="16sp"
                        app:secondPartTextSize="12sp"/>
                </LinearLayout>

            </RelativeLayout>
            <!-- separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1e000000"/>
            <RelativeLayout
                android:id="@+id/third_zone_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_normal"
                android:visibility="gone">
                <View
                    android:id="@+id/third_zone_color"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/energy_zone_yellow_gradient"/>
                <TextView
                    android:id="@+id/third_zone_title"
                    style="@style/Gray16LeftRg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_tiny"
                    android:layout_toEndOf="@id/third_zone_color"/>

                <TextView
                    android:id="@+id/third_zone_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="4sp"
                    android:textSize="14sp"
                    android:textStyle="normal"/>
                <LinearLayout
                    android:id="@+id/third_zone_total_container"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/third_zone_title"
                    android:layout_marginStart="@dimen/padding_tiny"
                    android:layout_toEndOf="@+id/third_zone_color"
                    android:orientation="vertical">
                    <TextView
                        style="@style/Gray14LeftMd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total"/>
                    <TextView
                        android:id="@+id/third_zone_total_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/rub_measure"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <com.livetyping.moydom.ui.custom.MultisizeTextView
                        android:id="@+id/third_zone_total_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/energy_measure"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:firstPartTextSize="16sp"
                        app:secondPartTextSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/third_zone_average_container"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/third_zone_title"
                    android:layout_marginStart="@dimen/padding_tiny"
                    android:layout_toEndOf="@+id/third_zone_total_container"
                    android:orientation="vertical">
                    <TextView
                        style="@style/Gray14LeftMd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/average"/>
                    <TextView
                        android:id="@+id/third_zone_average_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/rub_measure"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <com.livetyping.moydom.ui.custom.MultisizeTextView
                        android:id="@+id/third_zone_average_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/energy_measure"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:firstPartTextSize="16sp"
                        app:secondPartTextSize="12sp"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</FrameLayout>