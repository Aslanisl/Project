<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="184dp"
    android:layout_marginEnd="@dimen/spacing_tiny"
    android:background="@drawable/background_cameras_gray">

    <ImageView
        android:id="@+id/item_camera_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/spacing_normal"
        android:src="@drawable/play"/>

    <TextView
        android:id="@+id/item_camera_location"
        style="@style/White16LeftBld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/spacing_normal"
        android:layout_toStartOf="@id/item_camera_online"/>

    <TextView
        android:id="@+id/item_camera_online"
        style="@style/White14RightRg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/spacing_normal"
        android:layout_marginStart="@dimen/spacing_normal"
        android:background="@drawable/background_online_camera_text"
        android:paddingBottom="4dp"
        android:paddingEnd="@dimen/padding_tiny"
        android:paddingStart="@dimen/padding_tiny"
        android:paddingTop="4dp"/>

    <ProgressBar
        android:id="@+id/item_camera_loading"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/item_camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>